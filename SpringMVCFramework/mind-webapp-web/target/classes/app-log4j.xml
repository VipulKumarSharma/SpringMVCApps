<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
		<param name="Threshold" value="trace"/>

		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss} %-5p [%t] %C{2} (%F:%L) - %m%n"/>
		</layout>
	</appender>

	<appender name="ROLLING" class="org.apache.log4j.RollingFileAppender">
		<param name="Threshold" value="trace" />
		<param name="File" value="${catalina.base}/logs/app/app.log" />
		<param name="Append" value="true"/>
		<param name="MaxFileSize" value="5MB" />
		<param name="MaxBackupIndex" value="5" />

		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{DATE} %-5p [%t] %c{2}:%L - %m%n"/>
		</layout>
	</appender>
	
	

	<category name="com.mind" additivity="false">
		<priority value="debug" />
		<appender-ref ref="ROLLING" />
		<appender-ref ref="STDOUT" />
	</category>

	<root>
		<priority value="debug" />
		<appender-ref ref="ROLLING"/>
		<appender-ref ref="STDOUT" />
	</root>

</log4j:configuration>